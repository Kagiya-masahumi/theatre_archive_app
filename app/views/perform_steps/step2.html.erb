<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @performance, url: step2_perform_steps_path, multipart: true ,method: :post do |f| %>
          

          <div class="field">
            <%= f.label "動画のアップロード",class: "label" %>
            <%= f.file_field :video, :accept => 'video/*' %>
          </div>

          <div class="field">
            <%= f.label :place , "劇場名" ,class: "label" %>
            <%= f.text_field :place ,class: "input" %>
          </div>

          <div class="field">
            <%= f.label :play_hour,"上演予定時間:約", class: 'label'%>
            <%= f.text_field :play_hour, class: 'text', size: "10",id: 'play_hour',autofocus: true%>時間
            <%= f.text_field :play_minutes, class: 'text',size: "10", id: 'play_minutes',autofocus: true%>分
          </div>

          <div class="field">
            <p>休憩時間</p>
            <label><%= f.radio_button :rest, "あり" %> あり </label>
            <label><%= f.radio_button :rest, "なし" %> なし</label>
          </div>

          <div class="field">
            <p>観客</p>
            <label><%= f.radio_button :audience, "観客あり" %> 観客の入場あり </label>
            <label><%= f.radio_button :audience, "観客なし" %> 観客の入場なし</label>
          </div>

          <div class="field">
            <%= f.label :player , "出演者" ,class: "label" %>
            <%= f.text_area :player, class: "textarea" ,id: 'player',autofocus: true%>
          </div>

          <div class="field">
            <%= f.label :staff , "スタッフ" ,class: "label" %>
            <%= f.text_area :staff , class: "textarea",id: 'staff', autofocus: true %>
          </div>


          <div class="field">
            <%= f.label :writer , "脚本" ,class: "label" %>
            <%= f.text_field :writer , class: "input" ,id: 'writer',autofocus: true%>
          </div>

          <div class="field">
            <%= f.label :directer , "演出" ,class: "label" %>
            <%= f.text_field :directer , class: "input", id: 'directer',autofocus: true %>
          </div>


          <div class="field">
            <%= f.label :other_notice, "その他（注意事項など）" ,class: "label" %>
            <%= f.text_area :other_notice , class: "textarea" , id: 'other_notice',autofocus: true, placeholder: "例）感染症対策に関して" %>
          </div>


          <div class="actions">
            <%= f.submit '投稿する', class: "button is-success" %>
            <%=link_to 'もどる', root_path, class:"back-btn" %>
          </div>
        <% end %>



      </div>
    </div>
  </div>
</section>

