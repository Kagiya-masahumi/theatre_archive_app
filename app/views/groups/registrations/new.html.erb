<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規登録画面【団体用】
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <%# form_for(resource, as: resource_name, url: group_registration_path(resource_name)) do |f| %>
        <%= form_with model: @group, url: group_registration_path, method: :post, local: true do |f| %>
        
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :name ,class: "label"%>
            <p class="control has-icon-left">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "団体名", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </p>
          </div>

          <div class="field">
            <%= f.label :email ,class: "label"%>
            <p class="control has-icon-left">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "email", class: "input" %>
              <span class="icon is-small is-left">
                <i class="far fa-envelope"></i>
              </span>
            </p>
          </div>


          <div class="field">
            <%= f.label :password ,class: "label"%>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <p class="control has-icon-left">
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: "input" %>
                <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
                </span>
              </p>
          </div>

          <div class="field">
            <%= f.label :password_confirmation ,class: "label"%>
            <p class="control has-icon-left">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "password confirmation" , class: "input"%>
              <span class="icon is-small">
                <i class="far fa-lock"></i>
              </span>
            </p>            
          </div>

          <div class="field">
            <%= f.label :chair_person ,class: "label"%>
            <p class="control has-icon-left">
              <%= f.text_field :chair_person, autofocus: true, autocomplete: "group_name", :placeholder => "代表者名", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </p>
          </div>

          <div class="field">
              <%= f.label :image,class: "label" %>
              <p class="control has-icon-left">
                <%= f.file_field :image %>
            </p>
          </div>

          <div class="actions">
            <%= f.submit "登録",class: "button is-success" %>
          </div>
          <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
