<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <div class="title">
        公演編集
      </div>
    </div>
  </div>
</section>

<% if @performance.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@performance.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @performance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<%end%>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @performance, url: performance_path(@performance), method: :put do |f| %>
          
          <div class="field">
            <%= f.label :image, "フライヤーの変更" %>
            <%= f.file_field :image, class: "input" %>
            <div id="image-list"></div>
          </div>


          <div class="field">
            <%= f.label "動画の変更",class: "label" %>
            <%= f.file_field :video, accept: 'video/*' %>
          </div>

          <div class="field">
            <%= f.label :tag_list, "タグ" %><br />
            <%= f.text_field :tag_list,class: "input", placeholder:"カンマ（,）で区切って記述してください" %>
          </div>


          <div class="field">
            <%= f.label :title, "公演タイトル", class: "label" %>
            <%= f.text_field :title , class: "input", id: 'title', autofocus: true, placeholder: '例）かもめ' %>
          </div>

          <div class="field">
            <%= f.label :explain , "公演内容" ,class: "label" %>
            <%= f.text_area :explain , class: "textarea",id: 'explain',autofocus: true, placeholder: '例）かもめ'%>
          </div>

          <div class="field">
            <%= f.label :start_date , "公演開始(予定)日"  %>
              <div class='input is-grouped'>
                <%= raw sprintf(
                            f.date_field(
                              :start_date,
                              class:'select-date',
                              id:"birth-date",
                              use_month_numbers: true,
                              prompt:'--',
                              start_year: (Time.now.year + 1),
                              end_year: 1999,
                              date_separator: '%s'),
                            "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
              </div>
          </div>
      

          <div class="field">
            <%= f.label :finish_date , "公演終了(予定)日"  %>
              <div class='input is-grouped'>
                <%= raw sprintf(
                            f.date_field(
                              :finish_date,
                              class:'select-date',
                              id:"birth-date",
                              use_month_numbers: true,
                              prompt:'--',
                              start_year: (Time.now.year + 1),
                              end_year: 1999,
                              date_separator: '%s'),
                            "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
              </div>
          </div>

          <div class="field">
            <%= f.label :time_table , "タイムテーブル" ,class: "label" %>
            <%= f.text_area :time_table , class: "textarea",autofocus: true,placeholder:'例）' %>
          </div>

          <div class="field">
            <%= f.label :place , "劇場名" ,class: "label" %>
            <%= f.text_field :place ,class: "input" %>
          </div>

          <div class="field">
            <%= f.label :play_hour,"上演予定時間:約", class: 'label'%>
            <%= f.text_field :play_hour, class: 'text', size: "10",id: 'play_hour',autofocus: true%>時間
            <%= f.text_field :play_minutes, class: 'text',size: "10", id: 'play_minutes',autofocus: true%>分
          </div>

          <div class="field">
            <p>休憩時間</p>
            <label><%= f.radio_button :rest, "あり" %> あり </label>
            <label><%= f.radio_button :rest, "なし" %> なし</label>
          </div>

          <div class="field">
            <p>観客</p>
            <label><%= f.radio_button :audience, "観客あり" %> 観客の入場あり </label>
            <label><%= f.radio_button :audience, "観客なし" %> 観客の入場なし</label>
          </div>

          
          <div class="field">
            <%= f.label :price , "金額" ,class: "label" %>
            <%= f.text_field :price, class: 'text', size: "10",id: 'price',autofocus: true,placeholder:"例)2000"%>円
          </div>

          

          <div class="field">
            <%= f.label :writer , "脚本" ,class: "label" %>
            <%= f.text_field :writer , class: "input" ,id: 'writer',autofocus: true%>
          </div>

          <div class="field">
            <%= f.label :directer , "演出" ,class: "label" %>
            <%= f.text_field :directer , class: "input", id: 'directer',autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :player , "出演者" ,class: "label" %>
            <%= f.text_area :player, class: "textarea" ,id: 'player',autofocus: true%>
          </div>

          <div class="field">
            <%= f.label :staff , "スタッフ" ,class: "label" %>
            <%= f.text_area :staff , class: "textarea",id: 'staff', autofocus: true %>
          </div>


          <div class="field">
            <%= f.label :other_notice, "その他（注意事項など）" ,class: "label" %>
            <%= f.text_area :other_notice , class: "textarea" , id: 'other_notice',autofocus: true, placeholder: "例）感染症対策に関して" %>
          </div>


        
          <div class="actions">
            <%= f.submit '変更する', class: "button is-success" %>
          </div>

        <% end %>


      </div>
    </div>
  </div>
</section>

