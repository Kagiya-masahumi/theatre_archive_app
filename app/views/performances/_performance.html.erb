
<% if group_signed_in? %>
  ❤️：<%= perform.favorites.count %>

<% elsif user_signed_in? %>
  <% if current_user.favorites.find_by(performance_id: perform.id) %>
    <%= link_to destroy_path(perform.id), method: :delete, remote: true do %>
    <div class= "iine__button">
      ❤️：<%= perform.favorites.count %>
    </div>
    <% end %>
  <% else %>
    <%= link_to create_path(perform.id), method: :post, remote: true do %>
    <div class = "iine__button">
      ♡️：<%= perform.favorites.count %>
    </div>
    <% end %>
  <% end %>


<% end %>
